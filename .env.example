# ===========================================
# Polymarket Trading Bot - Configuration
# ===========================================

# Bot Selection (available: arb_intramarket)
BOT_NAME=arb_intramarket

# Mode: true = paper trading (no real orders)
DRY_RUN=true

# ===========================================
# Wallet Configuration (REQUIRED)
# ===========================================
# Your Polygon wallet private key
# API credentials are derived automatically from this
PRIVATE_KEY=

# ===========================================
# API Endpoints (defaults are fine)
# ===========================================
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com
CLOB_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market
CHAIN_ID=137

# ===========================================
# Watchlist Configuration (Slow Loop)
# ===========================================
# Refresh interval in seconds
WATCHLIST_REFRESH_INTERVAL=300
# Max markets to track
WATCHLIST_MAX_SIZE=50
# Hysteresis thresholds
WATCHLIST_ENTRY_THRESHOLD=0.7
WATCHLIST_EXIT_THRESHOLD=0.3

# ===========================================
# Arbitrage Configuration
# ===========================================
# Minimum profit margin (0.005 = 0.5%)
ARB_MIN_EDGE=0.005
# Minimum liquidity in USD
ARB_MIN_LIQUIDITY=5.0
# Max position per trade in USD (start small!)
ARB_MAX_POSITION=1.0

# ===========================================
# Risk Management
# ===========================================
# Max total exposure in USD
RISK_MAX_EXPOSURE=10.0
# Max open orders
RISK_MAX_OPEN_ORDERS=4
# Kill switch loss threshold in USD
RISK_KILL_SWITCH_LOSS=5.0
# Timeout for second leg in seconds
RISK_LEG_TIMEOUT=5.0

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=console

# ===========================================
# Storage
# ===========================================
DB_PATH=data/bot.db
WATCHLIST_PATH=data/watchlist.json
